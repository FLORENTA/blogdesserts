{% extends 'base.html.twig' %}

{% block body %}
    <div class="container w-50 mt-5 mb-5">
        <div class="row mb-2">
            <div class="col-lg-12">
                <a href="{{ path('app_admin_new_article') }}" class="btn btn-dark">
                    <i class="fas fa-plus-circle"></i>
                    {{ 'article.buttons.new'|trans }}
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="list-group">
                    {% for article in articles %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ article.title }}
                            <div>
                                <a class="btn btn-dark" href="{{ path('app_admin_update_article', {id: article.id}) }}">
                                    <i class="fas fa-edit"></i>
                                    {{ 'article.buttons.edit'|trans }}
                                </a>
                                <a class="btn btn-danger" href="{{ path('app_admin_delete_article', {id: article.id}) }}">
                                    <i class="fas fa-trash"></i>
                                    {{ 'article.buttons.delete'|trans }}
                                </a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}