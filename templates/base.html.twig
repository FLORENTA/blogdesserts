<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('app_index') }}">{{ 'navbar.title'|trans }}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                {% if is_granted('ROLE_ADMIN') %}
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_admin_index') }}">{{ 'navbar.link.home'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_articles') }}">{{ 'navbar.link.articles'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_comment_index') }}">{{ 'navbar.link.comments'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">{{ 'navbar.link.logout'|trans }}</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form class="form-inline">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </li>
                    </ul>
                {% else %}
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_admin_index') }}">{{ 'navbar.link.home'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_articles') }}">{{ 'navbar.link.articles'|trans }}</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            {{ render(controller('App\\Controller\\SearchController::form')) }}
                        </li>
                    </ul>
                {% endif %}
            </div>
        </nav>
    </head>
    <body>
        <div class="toast ml-auto w-100" role="alert" aria-live="assertive" aria-atomic="true" data-delay="4000" style="position: fixed; top: 100; right: 0; z-index:1020;">
            <div class="toast-header">
                <strong class="mr-auto">Info</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">

            </div>
        </div>
        {% for level, flashes in app.flashes %}
            {% for flash in flashes %}
                {% if level == 'warning' %}
                    {% set alertClass = 'warning' %}
                {% elseif level == 'error' %}
                    {% set alertClass = 'danger' %}
                {% elseif level == 'success' %}
                    {% set alertClass = 'success' %}
                {% else %}
                    {% set alertClass = 'primary' %} {# info #}
                {% endif %}
                <div class="alert alert-{{ alertClass }}" role="alert">
                    {% if level == 'success' %}
                        <i class="fas fa-check-circle"></i>
                    {% elseif level == 'info' %}
                        <i class="fas fa-info-circle"></i>
                    {% elseif level == 'warning' or level == 'error' %}
                        <i class="fas fa-exclamation-triangle"></i>
                    {% endif %}
                    {{ flash }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
